generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  googleId String @unique
  firstName String
  lastName String
  email String @unique
  review Review[]

  @@map("User")
}

model Review {
  id Int @id @default(autoincrement())
  photourl String
  rating Float 
  opinion String? 
  userId Int
  user User @relation(fields: [userId], references: [id])
  folder Folder[] @relation("ReviewFolders")

  date DateTime @default(now())

  @@map("Review")
}

model Folder {
  id     Int      @id @default(autoincrement())
  name   String @unique
  userId Int
  posts  Review[] @relation("ReviewFolders")

   @@map("Folder")
}


